(deftemplate mineral
	(slot nombre (type STRING))
	(slot color (type STRING))
	(slot dureza (type STRING))
	(slot fractura (type STRING))
	(slot transparencia (type STRING))
	(slot sistema_cristalino(type STRING))
)
(defrule pedir-color
	(declare (salience 10))
=>
	(printout t "Escribe el color" crlf)
	(assert(color (read)))
)
(defrule r-colores
	(mineral (nombre ?nom) (color ?col) (dureza ?dur) (fractura ?fract) (transparencia ?trans) (sistema_cristalino ?sis))
	(forall (mineral (color ?col)))
	=>
	(printout t "Los minerales que son de color " ?col " son: " ?nom  crlf)
)

	
